{# templates/consultation/edit.html.twig #}
{% extends 'front.html.twig' %}

{% block title %}Edit Consultation{% endblock %}

{% block body %}
    <div class="container mt-5 mb-5">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10 col-sm-12">
                <div class="card shadow-lg rounded-4">
                    <div class="card-header text-center bg-primary text-white">
                        <h4>Edit Consultation</h4>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            {{ form_start(form) }}

                            <div class="mb-3">
                                <label for="{{ form.date_consultation.vars.id }}" class="form-label">Consultation Date</label>
                                {{ form_widget(form.date_consultation, { 'attr': { 'class': 'form-control', 'placeholder': 'Select date and time' } }) }}
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-success btn-lg">Update Consultation</button>
                            </div>
                            {{ form_end(form) }}
                        </form>
                    </div>
                    <div class="card-footer text-center">
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
