{% extends 'front.html.twig' %}

{% block title %}Add Consultation{% endblock %}

{% block stylesheet %}
    <style>
        .is-invalid {
            border-color: red !important;
        }

        .invalid-feedback {
            display: block;
            color: red;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh; padding: 50px 0;">
        <div class="card shadow-lg p-5 rounded-4" style="max-width: 600px; width: 100%; background: #ffffff;">
            <h2 class="text-center text-primary mb-4">Add Consultation</h2>

            {{ form_start(form, {'attr': {'id': 'consultationForm', 'novalidate': 'novalidate'}}) }} <!-- Add novalidate here -->

            <div class="mb-4">
                {{ form_label(form.date_consultation, 'Consultation Date', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                {{ form_widget(form.date_consultation, {'attr': {'class': 'form-control', 'placeholder': 'Select consultation date', 'id': 'date_consultation'}}) }}
                {{ form_errors(form.date_consultation) }} <!-- Display Symfony validation errors -->
            </div>

            <div class="mb-4">
                {{ form_label(form.reason, 'Reason for Consultation', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                {{ form_widget(form.reason, {'attr': {'class': 'form-control', 'placeholder': 'Enter reason', 'id': 'reason'}}) }}
                {{ form_errors(form.reason) }} <!-- Display validation errors for reason -->
            </div>

            <div class="d-grid gap-2 mb-4">
                <button type="submit" class="btn btn-primary py-2 fs-5">Save Consultation</button>
            </div>

            {{ form_end(form) }}

            <div class="text-center mt-3">
                <a href="{{ path('app_professional_rendezvous') }}" class="btn btn-outline-secondary w-100 py-2">â¬… Back to Appointments</a>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <!-- No JavaScript validation needed -->
{% endblock %}
