{% extends 'front/base_front.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
    <!-- Section en-tête -->
    <section class="page-title bg-1">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center">
                    <h1 class="text-white">Mot de passe oublié</h1>
                </div>
            </div>
        </div>
    </section>

    <!-- Formulaire de réinitialisation -->
    <section class="section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card shadow p-4">
                        <h3 class="text-center mb-4">Réinitialisation du mot de passe</h3>

                        <!-- Affichage des messages flash -->
                        {% for message in app.flashes('error') %}
                            <div class="alert alert-danger">{{ message }}</div>
                        {% endfor %}
                        
                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success">{{ message }}</div>
                        {% endfor %}

                        <!-- Formulaire -->
                        <form method="post" action="{{ path('front_forgot_password') }}">
                            <div class="form-group">
                                <label for="email">Entrez votre adresse email :</label>
                                <input type="email" id="email" name="email" class="form-control" placeholder="exemple@domaine.com" required>
                            </div>
                            <button type="submit" class="btn btn-primary btn-block mt-3">Envoyer le lien de réinitialisation</button>
                        </form>

                        <div class="text-center mt-3">
                            <a href="{{ path('front_login') }}">Retour à la connexion</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
