{% extends 'back/base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">RendezVous Details</h1>

        <div class="card shadow-sm">
            <div class="card-body">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th scope="row">ID</th>
                            <td>{{ rendez_vou.id }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Patient ID</th>
                            <td>{{ rendez_vou.idPatient }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Date</th>
                            <td>{{ rendez_vou.dateRendezVous ? rendez_vou.dateRendezVous|date('Y-m-d') : 'N/A' }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Payment Status</th>
                            <td>{{ rendez_vou.statuPaiement }}</td>
                        </tr>
                    </tbody>
                </table>

                <div class="d-flex justify-content-between mt-3">
                    <a href="{{ path('app_rendez_vous_index') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                    <a href="{{ path('app_rendez_vous_edit', {'id': rendez_vou.id}) }}" class="btn btn-primary">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    {{ include('rendez_vous/_delete_form.html.twig', {'class': 'd-inline'}) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
