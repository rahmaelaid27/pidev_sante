{% extends 'base.html.twig' %}

{% block content %}
    <div class="container mt-5">
        <h1 class="mb-4">RendezVous Details</h1>

        <div class="card shadow-sm">
            <div class="card-body">
                <table class="table table-bordered">
                    <tbody>
                    <tr>
                        <th>ID</th>
                        <td>{{ rendez.id }}</td>
                    </tr>
                    <tr>
                        <th>Patient</th>
                        <td>{{ rendez.user.nameUser }}</td>
                    </tr>
                    <tr>
                        <th>Date</th>
                        <td>{{ rendez.dateRendez ? rendez.dateRendez|date('Y-m-d') : 'N/A' }}</td>
                    </tr>
                    <tr>
                        <th>Payment Status</th>
                        <td>{{ rendez.statuPaiement }}</td>
                    </tr>
                    </tbody>
                </table>

                <a href="{{ path('admin_rendez_list') }}" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
{% endblock %}
