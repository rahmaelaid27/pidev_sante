{% extends 'front.html.twig' %}

{% block title %}Add Appointment{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow border-0">
                    <div class="card-header bg-info text-white">
                        <h3 class="mb-0">New Appointment</h3>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, { 'attr': { 'novalidate': 'novalidate' } }) }}

                        <div class="mb-3 row">
                            {{ form_label(form.professional, null, { 'label_attr': { 'class': 'col-sm-3 col-form-label' } }) }}
                            <div class="col-sm-9">
                                {{ form_widget(form.professional, { 'attr': { 'class': 'form-control' } }) }}
                                <div class="text-danger">{{ form_errors(form.professional) }}</div>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            {{ form_label(form.dateRendez, null, { 'label_attr': { 'class': 'col-sm-3 col-form-label' } }) }}
                            <div class="col-sm-9">
                                {{ form_widget(form.dateRendez, { 'attr': { 'class': 'form-control' } }) }}
                                <div class="text-danger">{{ form_errors(form.dateRendez) }}</div>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            {{ form_label(form.statuPaiement, null, { 'label_attr': { 'class': 'col-sm-3 col-form-label' } }) }}
                            <div class="col-sm-9">
                                {{ form_widget(form.statuPaiement, { 'attr': { 'class': 'form-control' } }) }}
                                <div class="text-danger">{{ form_errors(form.statuPaiement) }}</div>
                            </div>
                        </div>

                        <!-- Centered submit button -->
                        <div class="mb-3 row">
                            <div class="col-sm-9 offset-sm-3">
                                <button type="submit" class="btn btn-primary">Create Appointment</button>
                            </div>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
                <div class="text-center mt-3">
                    <a href="{{ path('rendez_index') }}" class="btn btn-link">Back to Appointments</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
