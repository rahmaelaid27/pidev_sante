{% extends 'back/base.html.twig' %}

{% block body %}
<!DOCTYPE html>

<title>RendezVous Index</title>

<div class="container mt-4">
    <h1 class="text-center mb-4">RendezVous Index</h1>

    <div class="table-responsive">
        <table class="table table-hover table-bordered text-center">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>ID Patient</th>
                    <th>Date Rendez-vous</th>
                    <th>Statut Paiement</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for rendez_vou in rendez_vouses %}
                    <tr>
                        <td>{{ rendez_vou.id }}</td>
                        <td>{{ rendez_vou.idPatient }}</td>
                        <td>{{ rendez_vou.dateRendezVous ? rendez_vou.dateRendezVous|date('Y-m-d') : '' }}</td>
                        <td>
                            {% if rendez_vou.statuPaiement == 'paid' %}
                                <span class="badge bg-success">Paid</span>
                            {% elseif rendez_vou.statuPaiement == 'pending' %}
                                <span class="badge bg-warning text-dark">Pending</span>
                            {% else %}
                                <span class="badge bg-danger">Failed</span>
                            {% endif %}
                        </td>
                        <td class="d-flex justify-content-center gap-2">
                            <a href="{{ path('app_rendez_vous_show', {'id': rendez_vou.id}) }}" class="btn btn-info btn-sm">Show</a>
                            <a href="{{ path('app_fact_show', {'id': rendez_vou.Facture.id}) }}" class="btn btn-info btn-sm">Facture</a>
                            <a href="{{ path('app_rendez_vous_edit', {'id': rendez_vou.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                            <form method="post" action="{{ path('app_rendez_vous_delete', {'id': rendez_vou.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ rendez_vou.id) }}">
                                <button class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-danger fw-bold">No records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="text-center mt-3">
        <a href="{{ path('app_rendez_vous_new') }}" class="btn btn-primary">Create New</a
    </div>
</div>

{% endblock %}
