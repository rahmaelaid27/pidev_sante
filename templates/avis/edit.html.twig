{% extends 'front.html.twig' %}

{% block title %}Modifier l'Avis{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-lg border-0 rounded-3">
                    <div class="card-header bg-primary text-white text-center py-3">
                        <h3 class="mb-0">Modifier votre avis</h3>
                    </div>
                    <div class="card-body p-4">
                        {{ form_start(form) }}

                        <div class="mb-3">
                            {{ form_label(form.commentaire, 'Votre commentaire', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.commentaire, {'attr': {'class': 'form-control', 'rows': '4', 'placeholder': 'Exprimez votre avis ici...'}}) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.note, 'Note', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.note, {'attr': {'class': 'form-control', 'min': 1, 'max': 5}}) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.date_avis, 'Date', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.date_avis, {'attr': {'class': 'form-control', 'type': 'date'}}) }}
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="{{ path('app_avis_list') }}" class="btn btn-outline-secondary">
                                <i class="fa fa-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fa fa-save"></i> Save
                            </button>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
