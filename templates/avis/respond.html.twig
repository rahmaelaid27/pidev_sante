{% extends 'front.html.twig' %}

{% block title %}Respond to Feedback{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-lg">
                    <div class="card-header bg-primary text-white">
                        <h3 class="mb-0">Respond to Feedback</h3>
                    </div>
                    <div class="card-body">
                        <!-- Display Avis details -->
                        <div class="mb-4">
                            <h5 class="text-primary">Feedback Details</h5>
                            <div class="mb-3">
                                <strong>Utilisateur:</strong> <span class="text-muted">{{ avis.user.nameUser }}</span>
                            </div>
                            <div class="mb-3">
                                <strong>Professionnel:</strong> <span class="text-muted">{{ avis.professional.nameUser }}</span>
                            </div>
                            <div class="mb-3">
                                <strong>Commentaire:</strong>
                                <p class="text-muted">{{ avis.commentaire }}</p>
                            </div>
                            <div class="mb-3">
                                <strong>Note:</strong> <span class="text-muted">{{ avis.note }}</span>
                            </div>
                            <div class="mb-3">
                                <strong>Date:</strong> <span class="text-muted">{{ avis.dateAvis ? avis.dateAvis|date('Y-m-d') : '--' }}</span>
                            </div>
                        </div>

                        <!-- Response Form -->
                        <h5 class="text-primary">Your Response</h5>
                        {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_row(form.reponse, {
                                'attr': {'class': 'form-control', 'placeholder': 'Write your response here...'}
                            }) }}
                        </div>
                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_avis_list') }}" class="btn btn-secondary">Back to Reviews</a>
                            <!-- Only one submit button -->
                            <button type="submit" class="btn btn-success">Submit Response</button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
