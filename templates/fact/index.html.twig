{% extends 'back/base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4 text-center">Facture Index</h1>

        <div class="card shadow-sm">
            <div class="card-body">
                <table class="table table-striped table-bordered">
                    <thead class="table-light">
                        <tr>
                            <th scope="col">ID</th>
                   
                            <th scope="col">Montant</th>
                            <th scope="col">Date</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for facture in factures %}
                            <tr>
                                <td>{{ facture.id }}</td>

                                <td>{{ facture.montant }}</td>
                                <td>{{ facture.date ? facture.date|date('Y-m-d') : 'N/A' }}</td>
                                <td>
                                    <a href="{{ path('app_fact_show', {'id': facture.id}) }}" class="btn btn-sm btn-info">
                                        <i class="fas fa-eye"></i> Show
                                    </a>
                                    <a href="{{ path('app_fact_edit', {'id': facture.id}) }}" class="btn btn-sm btn-primary">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4" class="text-center">No records found</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>

                <div class="text-end">
                    <a href="{{ path('app_fact_new') }}" class="btn btn-success">
                        <i class="fas fa-plus"></i> Create New
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
