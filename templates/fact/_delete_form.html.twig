{# fact/_delete_form.html.twig #}
<form action="{{ path('facture_delete', {'id': facture.id}) }}" method="post" style="display:inline;">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ facture.id) }}">
    <button class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this item?');">
        <i class="fas fa-trash-alt"></i> Delete
    </button>
</form>
