
{% extends 'back/base.html.twig' %}

{% block body %}
<a href="#" class="btn-download">
					<i class='bx bxs-cloud-download' ></i>
					<span class="text">Download PDF</span>
				</a>
    <div class="container mt-5">
        <h1 class="mb-4">Facture Details</h1>

        <div class="card shadow-sm">
            <div class="card-body">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th scope="row">ID</th>
                            <td>{{ facture.id }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Montant</th>
                            <td>{{ facture.montant }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Date</th>
                            <td>{{ facture.date ? facture.date|date('Y-m-d') : 'N/A' }}</td>
                        </tr>
                    </tbody>
                </table>

                <div class="d-flex justify-content-between mt-3">
                    <a href="{{ path('app_fact_index') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                    <a href="{{ path('app_fact_edit', {'id': facture.id}) }}" class="btn btn-primary">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    {{ include('fact/_delete_form.html.twig', { 'class': 'd-inline' }) }}
                </div>
            </div>
        </div>
    </div>
    
{% endblock %}
